{
  "name": "calendar-app",
  "version": "1.1.2",
  "private": true,
  "description": "Kalenteri sovellus työpöydälle, tehty Reactilla ja Electronilla.",
  "homepage": "https://github.com/JariCode/calendar-app#readme",
  "bugs": {
    "url": "https://github.com/JariCode/calendar-app/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JariCode/calendar-app.git"
  },
  "license": "ISC",
  "author": "JariCode",
  "email": "jaricode.fi@gmail.com",
  "type": "module",
  "main": "main.cjs",
  "scripts": {
    "dev": "npx concurrently \"vite\" \"npx wait-on http://localhost:5173 && npx electron .\"",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "dist": "electron-builder"
  },
  "dependencies": {
    "boxicons": "^2.1.4",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^8.2.0",
    "electron": "^39.2.7",
    "electron-builder": "^24.13.3",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "vite": "^7.3.1",
    "wait-on": "^7.0.1"
  },
  "build": {
    "icon": "calendar.ico",
    "appId": "com.example.react-desktop",
    "productName": "Kalenteri",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "main.cjs",
      "preload.js",
      "calendar.ico"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": false,
      "selectPerMachineByDefault": false
    }
  }
}
